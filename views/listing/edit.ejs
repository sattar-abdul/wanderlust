<%- layout('/layouts/boilerplate') %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3> Edit your Listing</h3>
            <form method="POST" action="/listing/<%= listing.id %>?_method=PUT" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title"> Title </label>
                    <input class="form-control" value="<%= listing.title %>" name="listing[title]" type="text" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback"> Please enter a title</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description"> Description </label>
                    <textarea class="form-control" name="listing[description]" type="text" required><%= listing.description %> </textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback"> Please enter a description</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image_url"> Image URL </label>
                    <input class="form-control" value="<%= listing.image %>" name="listing[image]" type="text" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price"> Price </label>
                    <input class="form-control" value="<%= listing.price %>" name="listing[price]" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback"> Please enter a valid price</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="country"> Country </label>
                    <input class="form-control" value="<%= listing.country %>" name="listing[country]" type="text" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback"> Please enter a country</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location"> Location </label>
                    <input class="form-control" value="<%= listing.location %>" name="listing[location]" type="text" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback"> Please enter a location</div>
                </div>
                
                    
                <button class="btn btn-dark edit-btn"> EDIT </button>
                <br><br>
            </form>
        </div>
    </div>
</body>
