<%- layout('layouts/boilerplate.ejs') %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3> Add new Listing</h3>
        <form method="POST" action="/listing" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title"> Title </label>
                <input class="form-control" placeholder="Enter a Catchy Title" name="listing[title]" type="text" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback"> Please enter a title</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description"> Description </label>
                <textarea class="form-control" placeholder="Desctibe your place" name="listing[description]" type="text" required></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback"> Please enter description</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image_url"> Image URL </label>
                <input class="form-control" placeholder="https://www.image.jpeg" name="listing[image]" type="text">
            </div>        
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label class="form-label" for="price"> Price </label>
                    <input class="form-control" placeholder="1200" name="listing[price]" required>
                    <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback"> Please enter a valid price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label class="form-label" for="country"> Country </label>
                    <input class="form-control" placeholder="India" name="listing[country]" type="text" required>
                    <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback"> Please enter a country</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location"> Location </label>
                <input class="form-control" placeholder="Udaipur, Rajasthan" name="listing[location]" type="text" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback"> Please enter a location</div>
            </div>
            <br>        
            <button class="btn btn-dark add-btn"> ADD </button>
            <br><br>
        </form>
    </div>
</div>
